@model IEnumerable<ITLATV.Models.Serie>

@{
    ViewData["Title"] = "Series";
}

<h1>Series</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card h-100" style="width: 100%;">
                    <img src="@Html.DisplayFor(modelItem => item.EnlaceImagen)" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h4 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h4>
                        <p class="card-text fw-bold">Generos:</p>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.GeneroPrimario)</p>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.GeneroSecundario)</p>
                        <p class="card-text fw-bold">Productora:</p>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Productora)</p>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>