@model IEnumerable<ITLATV.Models.Serie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnlaceImagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnlaceVideo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GeneroPrimario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GeneroSecundario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Productora)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnlaceImagen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnlaceVideo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GeneroPrimario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GeneroSecundario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Productora)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
